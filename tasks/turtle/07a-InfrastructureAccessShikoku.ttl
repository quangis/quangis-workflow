@prefix : <https://github.com/quangis/transformation-algebra#>.
@prefix from: <https://github.com/quangis/transformation-algebra#from>.
@prefix type: <https://github.com/quangis/cct#type>.
@prefix via: <https://github.com/quangis/cct#operator>.

[] a :Query;
    :question "What is the percentage of rural population within 2km distance to all-season roads in Shikoku, Japan?";
    :workflow <http://example.com#InfrastructureAccessShikoku>;
    :output [
        type: "R(Reg, Ratio)"; from: [ # count amount ratio
            type: "R(Reg, Count)"; from: [ # rural clip and summing contentamount (rural_pop1)
                type: "R(Obj, Reg * Count)"; from: [
                    type: "R(Obj, Reg * Count)" # chochomoku
                ], [
                    type: "R(Obj, Reg)"; from: [ # rural
                        type: "R(Obj, Reg * Nom)"
                    ]
                ]
            ]
        ], [
            type: "R(Reg, Count)"; from: [ # rural_access1 via areal interpolation
                type: "R(Obj, Reg * Count)"; from: [ # rural_clip
                    type: "R(Obj, Reg * Count)" # chochomoku
                ], [
                    type: "R(Obj, Reg)"; from: [ # rural
                        type: "R(Obj, Reg * Nom)"
                    ]
                ]
            ], [
                type: "R(Loc, Bool)"; from: [ # roads_buffer
                    type: "R(Obj, Reg * Nom)"
                ]
            ]
        ]
    ].
