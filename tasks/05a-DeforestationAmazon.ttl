@prefix : <https://github.com/quangis/transformation-algebra#>.
@prefix from: <https://github.com/quangis/transformation-algebra#from>.
@prefix type: <https://github.com/quangis/cct#type>.
@prefix via: <https://github.com/quangis/cct#operator>.

_:ExistingRoads
    type: "R(Obj, Reg * Nom)".
_:PlannedRoads
    type: "R(Obj, Reg * Nom)".
_:DeforestedArea
    type: "R(Loc, Bool)".

[] a :Query;
    :question "What is the impact of roads on deforestation in the Amazon rainforest?";
    :workflow <https://example.com/#DeforestationAmazon>;
    :input _:ExistingRoads, _:PlannedRoads, _:DeforestedArea;
    :output [
        type: "R(Bool, Ratio)"; # A
        from: [
            type: "R(Loc, Bool)"; # B erased buffer
            from: _:DeforestedArea; # C
            from: [
                type: "R(Loc, Bool)"; # D planned roads buffer
                from: _:PlannedRoads # E
            ]
        ];
        from: [
            type: "R(Bool, Ratio)"; # F proportion
            from: [
                type: "C(Loc)"; # G deforested region within buffer
                from: [
                    type: "R(Loc, Bool)"; # H deforested area
                    from: _:DeforestedArea; # C
                    from: [
                        type: "R(Loc, Bool)"; # I roads buffer
                        from: _:ExistingRoads # J
                    ]
                ]
            ];
            from: [
                type: "C(Loc)"; # K region of roads buffer
                from: [
                    type: "R(Loc, Bool)"; # L
                    from: _:ExistingRoads # M (assuming it is the same as J)
                ]
            ]
        ]
    ].
