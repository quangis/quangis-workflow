abstr:ZonalStatisticsSize a :AbstractTool;
    rdfs:comment
        "Measures the size of the coverage of a given field raster inside object regions.";
    cct:expression
        """
        1: Field(Nom);
        2: ObjectInfo(Nom);
        join_attr
            (get_attrL 2)
            (groupbyR size (select eq (loTopo
                (fcover 1 (-: C(Nom)))
                (get_attrL 2)
            ) in))
        """;
    :input [ :id "1"; a ccd:FieldRaster, ccd:NominalA ];
